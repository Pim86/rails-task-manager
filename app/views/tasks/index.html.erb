<h1>My Task List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to '| delete |', delete_task_path(task), data: {
        turbo_method: 'delete',
        turbo_confirm: 'Are you sure?'
      } %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'add new task', tasks_new_path %></p>
